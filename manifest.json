{
  "application": {
    "name": "SalesDashboard",
    "version": "2.0",
    "project": "Default",
    "components": {
      "component": [
        {
          "name": "SalesDashboard",
          "description": "This is the dashboard webapp",
          "tier": "WebAppTier",
          "artifact": {
            "artifactType": "JBOSS",
            "artifactName": "org.ec:dashboard",
            "artifactVersion": "1.0",
            "sourceDirectory" : "dashboard",
            "artifactFileName": "dashboard.war",
            "jbossConfig" : "myJboss",
            "jbossCli" : "/usr/local/share/jboss/bin/jboss-cli.sh"
          }
        },
        {
          "name": "SalesService",
          "description": "This is the Service Application",
          "tier": "ServiceTier",
          "artifact": {
            "artifactType": "JBOSS",
            "artifactName": "org.ec:saleservice",
            "artifactVersion": "1.0",
            "sourceDirectory" : "salesservice",
            "artifactFileName": "sales.war",
            "jbossConfig" : "2ndJboss",
            "jbossCli" : "/usr/local/share/jboss/bin/jboss-cli.sh"
          }
        }
      ]
    },
    "environments" : {
      "environment" : [
        {
          "name": "JbossEnv",
          "project": "Default",
          "tierMap": {
            "WebAppTier": "AppTier",
            "ServiceTier" : "ServiceTier"
          }
        }
      ]
    }
  }
}
