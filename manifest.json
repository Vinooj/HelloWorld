{
  "application": {
    "name": "jboss_app",
    "version": "2.0",
    "project": "Default",
    "components": {
      "component": [
        {
          "name": "JBoss-RC",
          "description": "This is the dashboard webapp",
          "tier": "JBossAppTier",
          "artifact": {
            "artifactType": "JBOSS",
            "artifactName": "org.ec:hello",
            "artifactVersion": "1.0",
            "sourceDirectory" : "jbosshello",
            "artifactFileName": "HelloWorld.war",
            "jbossConfig" : "myJboss",
            "jbossCli" : "/usr/local/share/jboss/bin/jboss-cli.sh"
          }
        },
        {
          "name": "JBoss-SC",
          "description": "This is the Service Application",
          "tier": "JBossServiceTier",
          "artifact": {
            "artifactType": "JBOSS",
            "artifactName": "org.ec:helloservice",
            "artifactVersion": "1.0",
            "sourceDirectory" : "helloservice",
            "artifactFileName": "HelloService.war",
            "jbossConfig" : "myJboss",
            "jbossCli" : "/usr/local/share/jboss/bin/jboss-cli.sh"
          }
        }
      ]
    },
    "environments" : {
      "environment" : [
        {
          "name": "JbossEnv",
          "project": "Default",
          "tierMap": {
            "JBossAppTier": "AppTier",
            "JBossServiceTier" : "ServiceTier"
          }
        }
      ]
    }
  }
}
